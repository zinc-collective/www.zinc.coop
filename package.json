{
  "name": "zinc.coop",
  "version": "1.0.0",
  "description": "Public website for zinc.coop",
  "main": "index.js",
  "dependencies": {
    "@11ty/eleventy": "^0.10.0",
    "bulma": "^0.8.0",
    "concurrently": "^5.1.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "start": "concurrently --kill-others \"npm run css-watch\" \"npm run dev\"",
    "css-build": "node-sass src/_sass/main.scss dist/css/main.css",
    "css-watch": "npm run css-build && npm run css-build -- --watch",
    "prebuild": "pandoc src/operating-agreement/index.html -o src/operating-agreement/index.pdf",
    "build": "eleventy && npm run css-build",
    "dev": "eleventy --serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zinc-collective/zinc.coop.git"
  },
  "author": "Zinc Collective LLC",
  "license": "CC-BY-SA-4.0",
  "bugs": {
    "url": "https://github.com/zinc-collective/zinc.coop/issues"
  },
  "homepage": "https://github.com/zinc-collective/zinc.coop#readme"
}
